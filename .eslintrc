{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false,
    "AUTH0_DOMAIN"  : "",
    "AUTH0_CLIENT_ID" : "",
    "AUTH0_AUDIENCE" : "",
    "CREATE_EXPERIMENT_URL" : "",
    "FETCH_EXPERIMENTS_URL" : "",
    "FETCH_EXPERIMENT_URL" : "",
    "SAVE_EXPERIMENT_URL" : "",
    "IKELAB_IMAGES_STORE" : "",
    "IKELAB_IMAGEUPLOAD" : ""
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"]
  }
}
